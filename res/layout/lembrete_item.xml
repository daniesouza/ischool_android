<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_item_lembrete"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="?android:selectableItemBackground"
        android:padding="5dp"
        android:orientation="vertical">
     
          <RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:id="@+id/item_card_cabecalho"
           android:background="@drawable/cantos_arred_verde_forma">
              
	       <ImageView  
		         android:id="@+id/icon_calendario" 
		         android:layout_width="40dp"
	           	 android:layout_height="40dp"
	           	 android:paddingLeft="5dp"
	           	 android:paddingTop="8dp"
	   	         android:layout_gravity="center_vertical"
	   	         android:src="@drawable/icon_calendario"
	   	         android:contentDescription="@string/toque_detalhes"  	         
	   	         android:visibility="visible"/>    
	   	         
            <TextView 
                android:id="@+id/tv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="45dp"
                android:paddingTop="15dp"
                android:textColor="@color/branco_card"
                android:layout_gravity="center_vertical"     
                android:textSize="17sp"/> 	
                
	       <Button  
		         android:id="@+id/botao_fechar" 
		         android:layout_width="20dp"
	           	 android:layout_height="20dp"
	           	 android:layout_marginTop="15dp"
				 android:layout_marginRight="10dp"
	   	         android:background="@drawable/icon_fechar"
	   	         android:layout_alignParentRight="true"
	   	         android:contentDescription="@string/toque_detalhes"  	         
	   	         android:visibility="gone"/>            
          
          </RelativeLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_gravity="center_vertical">
            
            
            <TextView 
                android:id="@+id/tv_linha2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"                
                android:layout_marginBottom="5dp"
                android:textSize="17sp"/>   
                
			<Button 
			    android:id="@+id/botao_detalhes"
			    android:layout_width="wrap_content"
                android:layout_height="25dip"  
                android:layout_gravity="center_horizontal"                
                android:textColor="@color/cinza_lembrete_button"
                android:textAllCaps="false"
                android:text="Detalhes"
                android:background="@drawable/botao_detalhes_forma"  />            
        </LinearLayout>
        
</LinearLayout>

